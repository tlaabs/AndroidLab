<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.tlaabs.lab3_2.ResultActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >

        <TableRow>
            <TextView android:text="성명"/>
            <TextView android:id="@+id/name" android:text=" : "></TextView>
        </TableRow>

        <TableRow>
            <TextView android:text="성별"/>
            <TextView android:id="@+id/gender" android:text=" : "></TextView>
        </TableRow>

        <TableRow>
            <TextView android:text="수신여부"/>
            <TextView android:id="@+id/receive" android:text=" : "></TextView>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이전"
        android:layout_gravity="right"
        />

</LinearLayout>
